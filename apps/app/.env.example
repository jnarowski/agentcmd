# =============================================================================
# Environment Variables for Agent Workflows Web App
# =============================================================================
# Copy this file to .env and update with your actual values

# -----------------------------------------------------------------------------
# REQUIRED - Server will not start without these
# -----------------------------------------------------------------------------

# JWT Secret - Used to sign and verify authentication tokens
# IMPORTANT: Use a strong, random secret in production
# Generate with: openssl rand -base64 32
JWT_SECRET=your-secret-key-change-in-production

# Database URL - Path to SQLite database file
# This should be relative to the prisma/ directory
# Default: file:./dev.db (creates prisma/dev.db)
DATABASE_URL=file:./dev.db

# -----------------------------------------------------------------------------
# OPTIONAL - Server will use defaults if not specified
# -----------------------------------------------------------------------------

# Logging level - Options: trace, debug, info, warn, error, fatal
# Default: info
LOG_LEVEL=info

# Log file path - Where to write log files
# Logs are written to both console and this file in all environments:
# - Development: Pretty-formatted console + JSON file
# - Production: JSON stdout + JSON file
# Default: ./logs/app.log
LOG_FILE=./logs/app.log

# CORS - Comma-separated list of allowed origins for cross-origin requests
# Default: http://localhost:5173
# Production example: https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=http://localhost:5173

# Server Configuration
# Default: 3456
PORT=3456

# Host binding - Controls which network interfaces the server listens on
# Options:
#   0.0.0.0 - All interfaces (localhost, 127.0.0.1, LAN IP) [default]
#   127.0.0.1 - IPv4 loopback only (most restrictive)
#   localhost - May use IPv6 on some systems
# Default: 0.0.0.0
HOST=0.0.0.0

# Vite Development Server
# Default: 5173
VITE_PORT=5173

# Node Environment
NODE_ENV=development

# UI Features
# Enable/disable animated backgrounds on login page
# Default: true
VITE_ENABLE_BACKGROUNDS=true

# -----------------------------------------------------------------------------
# Remote Access (Tailscale VPN) - For accessing from other devices
# -----------------------------------------------------------------------------

# WebSocket Host Override - Set this to your Tailscale IP when accessing the app
# from remote devices (iPhone, iPad, other computers on your Tailscale network)
#
# How to get your Tailscale IP:
#   1. Install Tailscale: https://tailscale.com/download
#   2. Run: tailscale ip -4
#   3. Set VITE_WS_HOST to: <tailscale-ip>:3456
#
# Example: VITE_WS_HOST=100.101.102.103:3456
#
# Leave commented for local development (uses localhost:3456)
# VITE_WS_HOST=

# -----------------------------------------------------------------------------
# AI Model API Keys - For session name generation and AI features
# -----------------------------------------------------------------------------

# Anthropic API Key - Used to generate session names from chat conversations
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key

# -----------------------------------------------------------------------------
# Workflow Engine (Inngest) Configuration
# -----------------------------------------------------------------------------

# Inngest event key - Signing key for webhook authentication (optional in dev)
# Generate with: openssl rand -base64 32
# INNGEST_EVENT_KEY=

# Inngest memoization database path - SQLite database for workflow state
# Default: ./prisma/workflows.db
INNGEST_MEMOIZATION_DB_PATH=./prisma/workflows.db

# Inngest serve path - HTTP endpoint for Inngest webhook
# Default: /api/workflows/inngest
INNGEST_SERVE_PATH=/api/workflows/inngest

# Inngest dev mode - Enable dev server UI at http://localhost:8288
# Default: true for development
INNGEST_DEV_MODE=true

# -----------------------------------------------------------------------------
# Prisma CLI Configuration
# -----------------------------------------------------------------------------

# Disable Prisma hints, tips, and update messages
PRISMA_HIDE_UPDATE_MESSAGE=true
