# Server Configuration
PORT=4100
HOST=127.0.0.1  # Localhost only for security (use 0.0.0.0 for Docker/network access)

# Webhook Configuration
# Optional: Public webhook endpoint base URL (for Tailscale Funnel, ngrok, etc.)
# If not set, falls back to http://HOST:PORT
# WEBHOOK_BASE_URL=https://your-domain.ts.net

# Vite Development Server
VITE_PORT=4101
# Comma-separated list of allowed hosts for Vite dev server
# Use .ts.net (with leading dot) to allow all Tailscale domains (*.ts.net)
# VITE_ALLOWED_HOSTS=localhost,.ts.net

# JWT Authentication
JWT_SECRET=change-this-to-a-secure-random-string-in-production

# UI Features
VITE_ENABLE_BACKGROUNDS=true

DATABASE_URL=file:./prisma/dev.db

# Optional: Anthropic API Key for AI features
# ANTHROPIC_API_KEY=your-api-key-here

# Inngest Configuration
# Generated during dev:setup - do not change unless needed
# INNGEST_EVENT_KEY=<generated-during-setup>
# INNGEST_SIGNING_KEY=<generated-during-setup>

# Prisma CLI Configuration
PRISMA_HIDE_UPDATE_MESSAGE=true
